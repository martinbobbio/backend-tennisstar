{% extends 'base.html.twig' %}

{% block title %}{{ parent() }}Crear Usuario{% endblock %}

{% block page_title %}<h1 class="text-default">Formulario</h1>{% endblock %}

{% block page_title_right %}<a href="{{ path('user_index') }}" class="btn btn-default btn">Todos los Usuarios</a>{% endblock %}

{% block page_content %}

    <style>
        .left_col{
            height:1300px;
        }
    </style>

    <br>

    <div class="container well" style="padding:25px; background:white">

    <div class="col-xs-offset-2">
        <h1 class="text-primary">Agregar Usuario</h1>
    </div><br>

    {{ form_start(form) }}
        {{ form_widget(form) }}
        <div class="col-xs-offset-2">
            <input type="submit" value="Guardar" class="btn btn-success" id="submit" />
        </div>
    {{ form_end(form) }}

    </div>
    



{% endblock %}