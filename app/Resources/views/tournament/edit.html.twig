{% extends 'base.html.twig' %}

{% block title %}{{ parent() }}Editar Partido{% endblock %}

{% block page_title_right %}<a href="{{ path('tournament_index') }}" class="btn btn-default btn">Todos los Torneos</a>{% endblock %}

{% block page_title %}<h1 class="text-default">Formulario</h1>{% endblock %}

{% block page_content %}

    <style>
        .left_col{
            height:1500px;
        }
    </style>

    <br>

    <div class="container well" style="padding:25px; background:white">

    <div class="col-xs-offset-2">
        <h1 class="text-primary">Editar Torneo</h1>
    </div><br>

    {{ form_start(edit_form) }}
        {{ form_widget(edit_form) }}
        <div class="col-xs-offset-2">
            <input type="submit" value="Guardar" class="btn btn-success" />
        </div>
    {{ form_end(edit_form) }}

    </div>
    

    <script>
    $(document).ready(function() {
        $('#datetimepicker').data("DateTimePicker")
        $('.js-datepicker').datepicker({
            format: 'yyyy-mm-dd'
        });
    });
    </script>


{% endblock %}